<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/restrictionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Please select a restriction to add."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/restrictionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restrictionLabel"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/restrictionNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restrictionSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Next" />

</RelativeLayout>